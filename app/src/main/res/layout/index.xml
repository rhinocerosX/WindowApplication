<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#AED9DA">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:background="#EDFAFD">
         <TextView
             android:id="@+id/TV_index_temperature"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"/>

         <Button
             android:id="@+id/weather1"
             android:background="@drawable/weather"
             android:layout_width="50dp"
             android:layout_height="50dp" />/>
         <WebView
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:focusable="false"
             android:id="@+id/weather"/>
     </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_marginTop="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <ImageView
            android:id="@+id/index_oWindow"
            android:src="@drawable/window"
            android:layout_width="360dp"
            android:layout_height="380dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDFAFD">
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/index_alertor"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:background="@drawable/alerm"/>
        <Button
            android:id="@+id/index_clock"
            android:background="@drawable/colock"
            android:layout_marginRight="5dp"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/index_alertor"/>
        <Button
            android:id="@+id/reIndex"
            android:background="@drawable/index"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/index_clock"
            android:layout_width="90dp"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/loginbtn"
            android:background="@drawable/person"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/reIndex"
            android:layout_width="90dp"
            android:layout_height="70dp"/>
    </RelativeLayout>

</LinearLayout>